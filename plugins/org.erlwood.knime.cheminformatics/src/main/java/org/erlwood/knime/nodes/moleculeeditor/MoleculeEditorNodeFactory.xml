<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE knimeNode PUBLIC "-//UNIKN//DTD KNIME Node 2.0//EN" "http://www.knime.org/Node.dtd">
<knimeNode
		xmlns="http://knime.org/node/v3.1" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://knime.org/node/v3.1 https://knime.org/node/v3.1.xsd" 
		icon="MoleculeEditor.png" 
		type="Manipulator">
    <name>Atom Selector</name>
    
    <shortDescription>
        Allows to edit existing molecules and to select atoms.
    </shortDescription>
    
    <fullDescription>
        <intro>Allows to edit existing molecules and to select atoms.
        </intro>
        
        
        <option name="Molecule column">Input column containing the molecule</option>
        <option name="Name of the new column">Name of the output column having the molecule with selected atoms.</option>
        <option name="Output">Replace or add a new column</option>
        <option name="Reset previous modifications">Reset previous selections.</option>
        
    </fullDescription>
    
    <ports>
        <inPort index="0" name="Molecule Input">Input table with Molecule column</inPort>

        <outPort index="0" name="Selected Molecule Output">Output table with Molecule column with selection</outPort>
    </ports>    

</knimeNode>
